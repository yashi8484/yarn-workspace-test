{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":rebaseStalePrs",
    ":prHourlyLimitNone",
    ":maintainLockFilesWeekly"
  ],
  "enabledManagers": ["npm"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 16,
  "schedule": [
    "* 3 * * *"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "additionalBranchPrefix": "{{parentDir}}/",
      "matchFiles": ["packages/package-a/package.json"],
      "addLabels": ["package-a"]
    },
    {
      "additionalBranchPrefix": "{{parentDir}}/",
      "matchFiles": ["packages/package-b/package.json"],
      "addLabels": ["package-b"]
    }
  ]
}
